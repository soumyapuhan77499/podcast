$white = #fff
$black = #000

$bg = #e6eaf2
$bg2 = #f6f9fb

$blue = #0e2d49
$grey = #626f83

$red = #f65656
$green = #29b474
$purple = #7640d8

/*==============================
	Fonts
==============================*/
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@400;500&display=swap')

/*==============================
	Common styles
==============================*/
html
	-webkit-text-size-adjust 100%
	-ms-text-size-adjust 100%
html
body
	height 100%
body
	font-family 'Open Sans', sans-serif
	font-weight 400
	background-color $bg2
	-webkit-font-smoothing antialiased
button
	padding 0
	border none
	background-color transparent
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	cursor pointer
	&:focus
		outline none
a
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	&:hover
	&:active
	&:focus
		outline none
		text-decoration none
input
textarea
select
	padding 0
	margin 0
	border-radius 0
	-webkit-appearance none
	-moz-appearance none
	-ms-appearance none
	appearance none
	box-shadow none
	transition .5s ease
	transition-property color, background-color, border-color, box-shadow
	&:focus
		outline none

select::-ms-expand
	display none

input::-webkit-outer-spin-button
input::-webkit-inner-spin-button
	-webkit-appearance none
	margin 0

input[type=number]
	-moz-appearance textfield

ul
	margin 0
	padding 0
	list-style none

::-moz-selection
	background $white
	color $blue
	text-shadow none
::selection
	background $white
	color $blue
	text-shadow none

::-webkit-input-placeholder
	color $grey
	opacity 1
::-moz-placeholder
	color $grey
	opacity 1
:-moz-placeholder
	color $grey
	opacity 1
:-ms-input-placeholder
	color $grey
	opacity 1

:focus
	outline -webkit-focus-ring-color auto 0px

body::-webkit-scrollbar
	width 16px

body::-webkit-scrollbar-track
	background $bg

body::-webkit-scrollbar-thumb
	background-color $grey
	outline 1px solid $bg

.tab-content
	width 100%

.tab-content > .tab-pane
	display none

.tab-content > .active
	display block

.fade
	transition opacity .4s linear

@media screen and (prefers-reduced-motion: reduce)
	.fade
		transition none

.fade:not(.show)
	opacity 0

.collapse:not(.show)
	display none

.collapsing
	position relative
	height 0
	overflow hidden
	transition height .4s ease

@media screen and (prefers-reduced-motion: reduce)
	.collapsing
		transition none

:focus-visible
	outline 0px dotted

.row--grid
	margin-right -10px
	margin-left -10px
	.col-6
	.col-12
		padding-left 10px
		padding-right 10px
	@media (min-width: 768px)
		margin-right -15px
		margin-left -15px
		.col-6
		.col-12
			padding-left 15px
			padding-right 15px

.row--sidebar
	margin-right -10px
	margin-left -10px
	.col-6
	.col-12
		padding-left 10px
		padding-right 10px

.table-responsive
	display block
	width 100%
	overflow-x auto
	-webkit-overflow-scrolling touch
	-ms-overflow-style -ms-autohiding-scrollbar

.owl-carousel .owl-item
	-webkit-transform none

/*==============================
	Header
==============================*/
.header
	display block
	position fixed
	top 0
	left 0
	right 0
	width auto
	height 70px
	background-color $white
	border-bottom 2px solid $bg
	z-index 101
	&__content
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		height 100%
		width 100%
		position relative
		padding 0 15px
	&__logo
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		width 100%
		img
			width 100px
			height auto
			display block
	&__actions
		display inline-flex
		flex-direction row
		justify-content flex-end
		align-items center
		width auto
		margin-left auto
		margin-right 40px
	&__action
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 100%
		width 24px
		position relative
		margin-left 15px
		&:first-child
			margin-left 0
		&--cart
		&--note
			span
				display flex
				flex-direction row
				justify-content center
				align-items center
				height 16px
				min-width 16px
				color $white
				padding 0 5px
				border-radius 8px
				background-color $red
				position absolute
				top 1px
				left 10px
				font-family 'Roboto', sans-serif
				font-size 10px
				pointer-events none
				&:empty
					display none
		&--note
			a
			button
				svg
					width 22px
			span
				background-color $blue
		&:hover
			.header__drop
				pointer-events auto
				opacity 1
				z-index 99
				margin-top 0
	&__action-btn
		display flex
		flex-direction row
		justify-content center
		align-items center
		height 36px
		width 100%
		span
			display none
		svg
			width 24px
			height auto
			fill $grey
			transition fill .5s ease
		&:hover
			svg
				fill $blue
	&__btn
		position absolute
		width 24px
		height 22px
		display block
		right 15px
		top 24px
		span
			position absolute
			right 0
			width 24px
			height 2px
			background-color $grey
			border-radius 2px
			transition .5s ease
			&:first-child
				top 0
			&:nth-child(2)
				top 10px
				width 16px
			&:last-child
				top 20px
				width 8px
		&:hover
			span
				background-color $blue
		&--active
			span
				background-color $blue
				&:first-child
					transform rotate(-45deg)
					top 9px
				&:nth-child(2)
					opacity 0
					width 0
				&:last-child
					width 24px
					transform rotate(45deg)
					top 9px
	&__search
		position absolute
		left 0
		top -71px
		width 100%
		height 70px
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		background-color $white
		z-index 1
		padding 0 15px
		border-bottom 2px solid $bg
		transition top .5s ease
		input
			width calc(100% - 30px)
			height 40px
			background-color $bg
			color $blue
			font-size 16px
			border-radius 20px
			border none
			padding 0 20px
			font-family 'Roboto', sans-serif
			&:focus
				border-color $blue
		button
			position absolute
			right 60px
			top 15px
			height 40px
			width auto
			display flex
			flex-direction row
			justify-content center
			align-items center
			svg
				width 20px
				height auto
				fill $grey
				transition fill .5s ease
			&:hover
				svg
					fill $blue
			&.close
				right 15px
		&--active
			top 0
	&__nav
		display none
	&__drop
		position absolute
		top 100%
		right -15px
		background-color $bg
		padding 15px
		border-radius 20px
		width 200px
		pointer-events none
		opacity 0
		z-index -1
		transition .4s ease
		margin-top -5px
	&__note
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		flex-wrap wrap
		width 100%
		padding-bottom 10px
		margin-bottom 10px
		border-bottom 1px solid rgba($grey, .1)
		&:last-child
			margin-bottom 0
			padding-bottom 0
			border-bottom none
		svg
			width 16px
			height auto
			margin-right 5px
			fill $grey
		p
			color $blue
			font-size 14px
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			word-wrap break-word
			width calc(100% - 25px)
			display block
			margin-bottom 0
			font-weight 600
			a
				color $blue
				text-decoration underline
				&:hover
					color $blue
					text-decoration none
		span
			padding 0
			font-size 12px
			color $grey
			position relative
			background-color transparent
			top auto
			left auto
			display block
			width 100%
			margin-top 5px
		&--succ
			svg
				fill $green
		&--fail
			svg
				fill $red
		&--info
			svg
				fill $grey
		&--gift
			svg
				fill $purple
	&__product
		display flex
		flex-direction row
		justify-content flex-start
		align-items center
		flex-wrap wrap
		width 100%
		padding-bottom 10px
		margin-bottom 10px
		border-bottom 1px solid rgba($grey, .1)
		position relative
		padding-left 56px
		button
			position absolute
			width 14px
			bottom 5px
			right 0
			svg
				width 14px
				height auto
				fill $grey
				transition fill .4s ease
			&:hover
				svg
					fill $red
		img
			width 46px
			height auto
			position absolute
			top 0
			left 0
			border-radius 6px
		p
			color $blue
			font-size 15px
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
			word-wrap break-word
			width 100%
			display block
			margin-bottom 0
			font-weight 600
			a
				color $blue
				&:hover
					color $red
		span
			padding 0
			font-size 14px
			color $grey
			position relative
			background-color transparent
			top auto
			left auto
			display block
			width 100%
			margin-top 5px
			line-height 100%
		&:last-child
			margin-bottom 0
			padding-bottom 0
			border-bottom none
	&__all
		display none
	@media (min-width: 400px)
		&__action
			margin-left 20px
			&:first-child
				margin-left 0
		&__actions
			margin-right 44px
	@media (min-width: 576px)
		&__action	
			&--signin
				width auto
				padding-left 22px
				&:before
					content ''
					position absolute
					display block
					width 2px
					height 24px
					background-color $bg
					top 50%
					left 0
					margin-top -12px
				&:hover
					a
					button
						span
							color $blue
						svg
							fill $red
		&__action-btn
			span
				display block
				white-space nowrap
				color $grey
				font-size 16px
				margin-right 10px
				font-family 'Roboto', sans-serif
				transition color .5s ease
		&__content
			padding 0 30px
		&__search
			padding 0 30px
			button
				right 75px
				&.close
					right 30px
		&__btn
			right 30px
		&__drop
			width 260px
	@media (min-width: 768px)
		&__action
			margin-left 30px
			&--signin
				padding-left 32px
	@media (min-width: 1200px)
		position relative
		padding-left 280px
		&--mobile
			display none
		&__logo
		&__btn
			display none
		&__actions
			margin-right 0
		&__action
			&--search
				display none
		&__search
			position relative
			top auto
			left auto
			width 320px
			padding 0
			border none
			background-color transparent
			input
				padding 0 60px 0 20px
				width 100%
			button
				right 20px
				&.close
					display none
			&--active
				top auto
		&__nav
			display flex
			flex-direction row
			justify-content flex-start
			align-items center
			margin-right 60px
			a
				font-size 16px
				color $blue
				margin-right 30px
				font-family 'Roboto', sans-serif
				&:last-child
					margin-right 0
				&:hover
					color $red
		&__all
			display flex
			flex-direction row
			justify-content center
			align-items center
			width 100%
			background-color $white
			color $grey
			font-size 13px
			font-weight 500
			font-family 'Roboto', sans-serif
			margin-bottom 15px
			height 24px
			border-radius 12px 12px 0 0
			&:hover
				color $red

/*==============================
	Sidebar
==============================*/
.sidebar
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start
	background-color $white
	position fixed
	top 0
	left 0
	bottom 0
	z-index 101
	width 280px
	transform translateX(-100%)
	transition transform .5s ease
	border-right 2px solid $bg
	&__logo
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		height 70px
		width 100%
		padding 0 30px 0 15px
		border-bottom 2px solid $bg
		img
			width 100px
			height auto
			display block
	&__nav
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start
		position relative
		padding 30px 0 0
		width 100%
		max-height calc(100vh - 150px)
		overflow-y auto
	&__nav-link
		display inline-flex
		flex-direction row
		justify-content flex-start
		align-items center
		font-size 16px
		color $grey
		font-family 'Roboto', sans-serif
		margin-left 15px
		transition .4s ease
		position relative
		svg
			fill $grey
			width 22px
			height auto
			transition fill .5s
			margin-right 12px
			margin-bottom 2px
			&:last-child
				width 16px
				margin-right 0
				margin-top 3px
				margin-left 2px
				margin-bottom 0
		&:hover
			color $blue
			svg
				fill $blue
		&--active
		&[aria-expanded="true"]
			color $blue
			svg
				fill $blue
			&:hover
				svg
					fill $blue
		&[aria-expanded="true"]
			margin-bottom 15px
		&--active
			cursor default
	&__nav-item
		width 100%
		display block
		margin-bottom 15px
		position relative
		&:last-child
			margin-bottom 0
	&__menu
		padding 0
		display block
		width 100%
		text-align left
		overflow hidden
		background-color $bg2
		transition .4s ease
		height auto
		&--scroll
			height 165px
			overflow hidden
		li
			padding 0 0 0 49px
			margin-bottom 15px
			position relative
			&:before
				content ''
				position absolute
				display block
				width 4px
				height 4px
				border-radius 50%
				background-color $blue
				top 50%
				left 25px
				margin-top -2px
			&:last-child
				margin-bottom 0
				padding-bottom 20px
				&:before
					top 11px
			&:first-child
				margin-top 0
				padding-top 20px
				&:before
					top 31px
		a
			font-size 14px
			color $grey
			display block
			font-weight 400
			&:hover
				color $red
			&.active
				color $red
				cursor default
	&--active
		transform translateX(0)
	@media (min-width: 576px)
		&__logo
			padding 0 30px
		&__nav-link
			margin-left 30px
		&__menu
			li
				padding 0 0 0 64px
				&:before
					left 40px
	@media (min-width: 1200px)
		transform translateX(0)
		&__nav
			max-height calc(100vh - 332px)

